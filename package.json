    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/minimist": "^1.2.2",
    "@types/node": "^16.7.1",
    "@types/node-fetch": "^2.5.12",
