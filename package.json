  "dependencies": {
    "@inu-cafeteria/backend-core": "^0.7.8",
    "@types/express": "^4.17.13",
    "@types/moment": "^2.13.0",
    "axios": "^0.21.2",
    "axios-cookiejar-support": "^1.0.1",
    "bcrypt": "^5.0.1",
    "cheerio": "^1.0.0-rc.10",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
